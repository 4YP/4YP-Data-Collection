<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.jamie.android.a4ypdatacollection.MainActivity">

    <Button
        android:id = "@+id/start_service_button"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:text = "Start Data Collection Service"
        />
    <Button
        android:id="@+id/stop_service_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "Stop Data Collection Service"
        />
    <Button
        android:id = "@+id/send_collected_data_button"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:text = "Send Collected Data"
        />

    <TextView
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:text = "Instructions:\n1. Tap Start Data Collection to begin accelerometer data collection, you may leave this application running in the background. Collection will continue.\n2. When sufficient data has been collected, tap the stop data collection service button.\n3. When you stop data collection, Send Collected Data becomes available.\n4. Select this to send data via email. DO NOT EDIT ANY OF THE BODY TEXT.\n5. Email to jamiebrynes7@gmail.com"
        />
</LinearLayout>
